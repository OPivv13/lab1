<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity" android:id="@+id/linear_layout">
        <TextView
                android:id="@+id/heading_text"
                android:text="@string/head_text"
                android:textAlignment="center"
                android:textSize="@dimen/heading_size"
                android:textColor="@color/dark_colors"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heading_height"
                android:layout_marginTop="@dimen/margin_layout"
                android:layout_marginEnd="@dimen/margin_layout"
                android:layout_marginBottom="@dimen/margin_layout"
                android:layout_marginStart="@dimen/margin_layout"
                android:background="@drawable/heading_background"
                android:fontFamily="@font/roboto"/>

        <LinearLayout
                android:id="@+id/horizontal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:context=".MainActivity">
            <TextView
                    android:id="@+id/slot_one_text"
                    android:text="@string/slot_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/slot_height"
                    android:layout_marginStart="@dimen/margin_layout"
                    android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginBottom="@dimen/margin_layout"
                    android:layout_weight="1"
                    style="@style/slot"/>
            <TextView
                    android:id="@+id/slot_two_text"
                    android:text="@string/slot_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/slot_height"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginBottom="@dimen/margin_layout"
                    android:layout_marginStart="@dimen/margin_layout"
                    android:layout_marginEnd="@dimen/margin_layout"
                    android:background="@color/slot_background"
                    style="@style/slot"/>
            <TextView
                    android:id="@+id/slot_three_text"
                    android:text="@string/slot_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/slot_height"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginBottom="@dimen/margin_layout"
                    android:layout_marginEnd="@dimen/margin_layout"
                    style="@style/slot" />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity" android:id="@+id/vertical_layout">
            <EditText
                    android:id="@+id/number_car_edit"
                    android:inputType="textPersonName"
                    android:text="@string/number_car_value_text"
                    android:hint="@string/number_car"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginStart="@dimen/margin_layout"
                    android:layout_marginEnd="@dimen/margin_layout"
                    android:layout_marginBottom="@dimen/margin_layout"
                    android:ems="6"
                    style="@style/edit"/>
            <EditText
                    android:id="@+id/brand_car_edit"
                    android:inputType="textPersonName"
                    android:hint="@string/brand_car"
                    android:text="@string/brand_car_value_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_layout"
                    android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginEnd="@dimen/margin_layout"
                    android:layout_marginBottom="@dimen/margin_layout"
                    android:ems="10"
                    style="@style/edit"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text="@string/name_owner_value_text"
                    android:ems="16"
                    android:id="@+id/name_owner_edit" android:hint="@string/name_owner" style="@style/edit"
                    android:layout_marginStart="@dimen/margin_layout" android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginEnd="@dimen/margin_layout" android:layout_marginBottom="@dimen/margin_layout"/>
        </LinearLayout>
    </LinearLayout>
