<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity" android:id="@+id/linear_layout">

        <TextView
                android:text="@string/head_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/heading_height" android:id="@+id/heading_text"
                android:textAlignment="center" android:textSize="@dimen/heading_size"
                android:layout_marginTop="@dimen/margin_layout" android:layout_marginStart="@dimen/margin_layout"
                android:layout_marginEnd="@dimen/margin_layout" android:layout_marginBottom="@dimen/margin_layout"
                android:background="@drawable/heading_background" android:textColor="@color/dark_colors"
                android:fontFamily="@font/roboto"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:context=".MainActivity" android:id="@+id/horizontal_layout">
            <TextView
                    android:text="@string/slot_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/slot_height" android:id="@+id/slot_one_text" android:layout_weight="1"
                    style="@style/slot" android:layout_marginStart="@dimen/margin_layout"
                    android:layout_marginTop="@dimen/margin_layout" android:layout_marginBottom="@dimen/margin_layout"/>
            <TextView
                    android:text="@string/slot_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/slot_height" android:id="@+id/slot_two_text"
                    android:layout_weight="1" android:background="@color/slot_background" style="@style/slot"
                    android:layout_marginTop="@dimen/margin_layout" android:layout_marginBottom="@dimen/margin_layout"
                    android:layout_marginStart="@dimen/margin_layout" android:layout_marginEnd="@dimen/margin_layout"/>
            <TextView
                    android:text="@string/slot_value_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/slot_height" android:id="@+id/slot_three_text"
                    android:layout_weight="1" style="@style/slot" android:layout_marginTop="@dimen/margin_layout"
                    android:layout_marginBottom="@dimen/margin_layout" android:layout_marginEnd="@dimen/margin_layout"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".MainActivity" android:id="@+id/vertical_layout">
        </LinearLayout>
    </LinearLayout>
</layout>